<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Client_PSL"
    xmlns:controls="clr-namespace:Client_PSL.Controls"
    local:AnimateOnLoadBehavior.IsEnabled="False"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    MinWidth="200" MinHeight="200"
    x:Class="Client_PSL.Controls.SmartView"
    x:DataType="controls:SmartView">

    <UserControl.Resources>
        <ControlTheme x:Key="ThumbTheme" TargetType="Thumb">
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{DynamicResource DefaultCornerRadius}" />
                </ControlTemplate>
            </Setter>
        </ControlTheme>
    </UserControl.Resources>

    <Border BorderBrush="Red" BorderThickness="3"
        CornerRadius="{DynamicResource DefaultCornerRadius}">

        <DockPanel>
            <Border Background="Red" Height="30" HorizontalAlignment="Stretch" DockPanel.Dock="Top">
                <DockPanel>
                    <Button Content="âœ–" Background="Transparent" BorderThickness="0"
                        HorizontalAlignment="Right" DockPanel.Dock="Right"
                        Click="OnCloseButtonClick" />

                    <TextBlock VerticalAlignment="Center"
                        Text="{Binding Title, RelativeSource={RelativeSource AncestorType={x:Type controls:SmartView}}}" />
                </DockPanel>
            </Border>

            <Thumb x:Name="ResizeThumb"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Width="16" Height="16"
                Margin="0"
                Cursor="BottomRightCorner"
                Background="Lime"
                Theme="{StaticResource ThumbTheme}"
                DockPanel.Dock="Bottom" />

            <ContentControl x:Name="ContentHost"
                Content="{Binding DataContext, RelativeSource={RelativeSource Self}}" />
        </DockPanel>
    </Border>
</UserControl>
